    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hd</item>
        <item name="colorPrimaryDark">@color/txt</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/hd</item>
        <item name="colorControlActivated">@color/bg2</item>
